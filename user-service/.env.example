# Application Settings
NODE_ENV=development
PORT=3002
SERVICE_NAME=user-service

# Database Configuration
MONGODB_URI=mongodb://localhost:27017/user_service_db
MONGODB_TEST_URI=mongodb://localhost:27017/user_service_test_db

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-for-user-service
JWT_EXPIRES_IN=7d
JWT_REFRESH_SECRET=your-super-secret-refresh-key
JWT_REFRESH_EXPIRES_IN=30d

# Security
BCRYPT_SALT_ROUNDS=12
PASSWORD_MIN_LENGTH=8

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=1

# Email Configuration
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password
EMAIL_FROM=noreply@yourcompany.com

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# File Upload
MAX_FILE_SIZE=5242880
UPLOAD_PATH=uploads/avatars

# Two-Factor Authentication
TWO_FACTOR_SERVICE_NAME=ERP System

# API Gateway
API_GATEWAY_URL=http://localhost:3000

# Service Discovery
CONSUL_HOST=localhost
CONSUL_PORT=8500

# Monitoring
ENABLE_METRICS=true
METRICS_PORT=9002

# Audit Logging
AUDIT_LOG_RETENTION_DAYS=365
