# API Configuration
VITE_API_URL=http://localhost:5001/api

# App Configuration
VITE_APP_NAME="User Management System"
VITE_APP_VERSION="1.0.0"

# Authentication
VITE_JWT_STORAGE_KEY=accessToken
VITE_REFRESH_TOKEN_STORAGE_KEY=refreshToken

# Features
VITE_ENABLE_2FA=true
VITE_ENABLE_EMAIL_VERIFICATION=true
VITE_ENABLE_PASSWORD_RESET=true

# File Upload
VITE_MAX_FILE_SIZE=5242880
VITE_ALLOWED_IMAGE_TYPES=image/jpeg,image/png,image/gif,image/webp

# Development
VITE_DEV_MODE=true
VITE_SHOW_QUERY_DEVTOOLS=true
